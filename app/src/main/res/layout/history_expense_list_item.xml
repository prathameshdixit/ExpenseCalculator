<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_category_icon"
        style="@style/ImageButton"
        android:src="@drawable/ic_label_black_24dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/list_textview_amount"
         />

    <TextView
        android:id="@+id/list_textview_amount"
        style="@style/TextSmall"
        android:padding="15dp"
        android:text="$"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintLeft_toRightOf="@id/list_category_icon"
        app:layout_constraintRight_toLeftOf="@id/list_textview_category"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/list_textview_category"
        style="@style/TextSmall"
        android:padding="10dp"
        android:text="@string/list_textview_category"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/list_textview_amount"
        app:layout_constraintLeft_toRightOf="@id/list_textview_amount"
        app:layout_constraintTop_toTopOf="@id/list_textview_amount" />

    <TextView
        android:id="@+id/list_textview_date"
        style="@style/TextSmall"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="@string/list_textview_date"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/list_textview_amount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_textview_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>