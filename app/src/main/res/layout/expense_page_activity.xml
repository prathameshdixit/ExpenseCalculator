<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ShowExpense">

    <TextView
        android:id="@+id/expense_category_textview"
        style="@style/TextLargeHeading"
        android:layout_width="match_parent"
        android:textFontWeight="600"
        android:textAlignment="center"
        android:text="@string/expense_category_textview"
        android:textSize="60dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/expense_amount_textview"
        style="@style/Text"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:paddingLeft="20dp"
        android:text="$"
        android:textFontWeight="600"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/expense_category_textview"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amount_text"
        app:layout_constraintTop_toBottomOf="@id/expense_category_textview" />

    <TextView
        android:id="@+id/expense_date_textview"
        style="@style/TextMediumHeading"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="52dp"
        android:gravity="center"
        android:text="@string/expense_date_textview"
        android:textAlignment="center"
        android:textFontWeight="600"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_text"
        app:layout_constraintTop_toBottomOf="@+id/expense_amount_textview" />

    <TextView
        android:id="@+id/expense_note_textview"
        android:layout_width="133dp"
        android:layout_height="323dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="10dp"
        android:text="@string/expense_note_textview"
        android:textAlignment="center"
        android:textFontWeight="600"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/notes_text"
        app:layout_constraintTop_toBottomOf="@+id/expense_date_textview" />

    <ImageButton
        android:id="@+id/delete_button"
        style="@style/ImageButton"
        android:padding="20dp"
        android:src="@drawable/ic_delete_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/edit_button"
        style="@style/ImageButton"
        android:padding="20dp"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/delete_button"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/amount_text"
        android:textFontWeight="400"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/expense_category_textview"
        app:layout_constraintTop_toBottomOf="@+id/expense_category_textview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:text="@string/expense_date_textview"
        android:textFontWeight="400"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/amount_text"
        app:layout_constraintTop_toBottomOf="@+id/amount_text" />

    <TextView
        android:id="@+id/notes_text"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:text="@string/expense_note_textview"
        android:textFontWeight="400"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/date_text"
        app:layout_constraintTop_toBottomOf="@+id/date_text" />

</androidx.constraintlayout.widget.ConstraintLayout>